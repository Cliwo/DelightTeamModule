<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TEAM.MyTeam.Schedule.CreateSchedule">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        android:id="@+id/TVCancel"
        android:layout_alignParentTop="true"
        android:textSize="24dp"
        android:gravity="right"
        android:layout_marginRight="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RLScheduleEditView"
        android:layout_below="@id/TVCancel"
        android:paddingTop="12dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TILTitle"
            android:padding="20dp"
            android:background="@drawable/xml_border">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목을 입력하세요."
                android:id="@+id/ETTitle"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_below="@id/TILTitle"
            android:id="@+id/LLDateAndTimePicker"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVDate"
                android:text="2016년 12월 31일 토요일"
                android:textSize="24dp"
                android:gravity="center"
                android:background="@drawable/xml_border"
                android:padding="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVTime"
                android:text="오후 07:00"
                android:textSize="24dp"
                android:gravity="center"
                android:background="@drawable/xml_border"
                android:padding="12dp"/>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TILLocation"
            android:layout_below="@id/LLDateAndTimePicker"
            android:padding="20dp"
            android:background="@drawable/xml_border">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="장소를 입력하세요."
                android:id="@+id/ETLocation"/>

        </android.support.design.widget.TextInputLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="일정 등록"
            android:id="@+id/btnRegisterSchedule"
            android:textSize="24dp"/>

    </RelativeLayout>

</RelativeLayout>
