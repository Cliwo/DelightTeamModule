<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.delightteammodule.TEAM.MyTeam.FragTeamSchedule">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RLTeamScheduleView">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RVScheduleView">
        </android.support.v7.widget.RecyclerView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/fabMakeSchedule"
            android:layout_margin="8dp"
            android:src="@drawable/ic_mode_edit_24dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:id="@+id/LLMakeTeamSchedule"
            android:layout_above="@id/fabMakeSchedule"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스케쥴 생성"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:id="@+id/TVMakeTeamSchedule"
                />

            <android.support.design.widget.FloatingActionButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fabMakeTeamSchedule"
                android:layout_margin="8dp"
                app:backgroundTint="@color/colorPrimaryDark"
                android:src="@drawable/ic_mode_edit_24dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:id="@+id/LLMakeMatch"
            android:layout_above="@id/LLMakeTeamSchedule"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매치 생성"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:id="@+id/TVMakeMatch"
            />

            <android.support.design.widget.FloatingActionButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:id="@+id/fabMakeMatch"
                android:layout_margin="8dp"
                app:backgroundTint="@color/colorPrimaryDark"
                android:src="@drawable/ic_mode_edit_24dp"
                />

        </LinearLayout>



    </RelativeLayout>


</FrameLayout>
