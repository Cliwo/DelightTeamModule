<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/RLTeamScheduleView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLMonthAndDate"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/TVMonthAndDate"
            android:text="03월 24일"
            android:textSize="18dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLTeamScheduleDetails"
        android:orientation="horizontal"
        android:layout_below="@id/LLMonthAndDate"
        android:background="@drawable/xml_border">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/RLTime"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후 6:23"
                android:id="@+id/TVTime"
                android:padding="4dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/LLTeamScheduleContents"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한경기해요"
                android:textSize="16dp"
                android:id="@+id/TVScheduleTitle"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/LLMakerAndFormation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오진우"
                    android:textSize="16dp"
                    android:id="@+id/TVScheduleMaker"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6vs6"
                    android:textSize="16dp"
                    android:id="@+id/TVMatchFormation"
                    android:layout_marginLeft="8dp"/>
                <!-- Match가 아니라면 사라져야함 -->

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아주대학교"
                android:textSize="16dp"
                android:id="@+id/TVScheduleLocationNickName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경기도 수원시 영통구"
                android:textSize="16dp"
                android:id="@+id/TVScheduleLocation"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/RLTeamScheduleTag"
            android:layout_weight="2"
            android:background="@color/colorAccent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TVScheduleTag"
                android:layout_centerInParent="true"
                android:text="리뷰"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>