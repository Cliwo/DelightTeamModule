<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IVCancel"
        android:background="@drawable/ic_close_24dp"
        android:layout_gravity="right"
        android:padding="8dp"
        android:backgroundTint="@color/colorAccent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLTeamNameAndEmblem"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/logo1"
            android:layout_margin="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LLTeamNameAndLeader"
            android:orientation="vertical"
            android:gravity="left"
            android:paddingTop="22dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="딜라잇FC"
                android:textSize="22sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개설자 : 오진우(jinoo)"
                android:textSize="16sp"
                android:paddingTop="8dp"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLTeamPositionView"
        android:padding="6dp"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_sample_24dp"
            android:id="@+id/IVForward"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/TVForward"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="6dp"
            />


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_sample_24dp"
            android:id="@+id/IVMidFielder"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/TVMidFielder"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="6dp"
            />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_sample_24dp"
            android:id="@+id/IVDefender"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/TVDefender"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="6dp"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_sample_24dp"
            android:id="@+id/IVGoalKeeper"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/TVGoalKeeper"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="6dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLTeamAgeView"
        android:layout_below="@id/LLTeamPositionView"
        android:padding="6dp"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_sample_24dp"
            android:id="@+id/IV10"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/TV10"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="6dp"
            />


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_sample_24dp"
            android:id="@+id/IV20"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/TV20"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="6dp"
            />



        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_sample_24dp"
            android:id="@+id/IV30"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/TV30"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="6dp"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_sample_24dp"
            android:id="@+id/IV40"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/TV40"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="6dp"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_sample_24dp"
            android:id="@+id/IV50"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/TV50"
            android:layout_weight="1"
            android:textSize="20dp"
            android:paddingLeft="6dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLRegionConfigureView"
        android:orientation="vertical"
        android:paddingTop="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="활동 지역 선택"
                android:textSize="20sp"
                android:id="@+id/TVRegionSelect"
                android:textColor="@color/colorDark"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBright"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/box3"
                android:backgroundTint="@color/colorAccent"
                android:text="영통동"
                android:textColor="@color/colorBright"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="6dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/box3"
                android:backgroundTint="@color/colorBright"
                android:text=""
                android:textColor="@color/colorBright"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="6dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/box3"
                android:backgroundTint="@color/colorBright"
                android:text=""
                android:textColor="@color/colorBright"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="6dp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LLTeamHomeGround">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팀 경기장 : "
            android:textSize="18dp"
            android:id="@+id/TVTeamHomeGround"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아주대학교 운동장"
            android:textSize="20dp"
            android:id="@+id/TVTeamHomeGroundModify"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LLTeamRecentActivity"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:text="최근 활동"
            android:textSize="20dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="팀 가입하기"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/TVTeamJoin"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</LinearLayout>